<div class="container">
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-dark bg-primary">
        <h2><a class="navbar-brand">Proposta de trocas</a></h2>
      </nav>
    </div>
    <% if @proposals.empty? %>
      <div class="col-md-12 text-center mt-3">
        <h4>Nenhuma troca disponível.</h4>
      </div>  
    <% else %>
      <% @proposals.each do |proposal| %>
        <div class="col-md-6 mt-3">
          <div class="card">
            <div class="card-body d-flex align-items-center">
              <div>
                <img src="http://via.placeholder.com/500x500" alt="" class="img-fluid">
                <h6 class="mt-3 mb-0 text-center">Vai dar merda</h6>
              </div>
              <div class="px-3"><i class="fas fa-arrow-right fa-2x text-secondary"></i></div>
              <div>
                <img src="http://via.placeholder.com/500x500" alt="" class="img-fluid">
                <h6 class="mt-3 mb-0 text-center">Não vai dar merda</h6>
              </div>
            </div>
            <div class="card-footer text-center">
              <%= link_to 'Trocar', answer_proposal_path(answer: true), class: "btn btn-success"%>
              <%= link_to 'Não trocar', answer_proposal_path(answer: false), class: "btn btn-danger"%>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>  
  </div>
</div>

